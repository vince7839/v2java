<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.v2java.dispatcher.dao.mapper.TaskMapper">
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into task(flow_num,task_type,status) values
        <foreach collection="list" separator="," item="item">
            (#{item.flowNum},#{item.taskType},#{item.status})
        </foreach>
    </insert>
    <update id="updateStatus">
        update task set status=#{status},message=#{message} where id=#{id}
    </update>
</mapper>